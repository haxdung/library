<h1></h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-login">
        <div class="panel-heading">
          <div class="row">
            <div class="col-xs-6">
              <a href="#" class="active" id="login-form-link">Login</a>
            </div>
            <div class="col-xs-6">
              <a href="#" id="register-form-link">Register</a>
            </div>
          </div>
          <hr>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <%= form_for :session, url: login_path, html: {role: "form", style: "display: block;", id:"login-form"} do |f| %>
                <%= f.text_field :email, placeholder: "Email", class: "form-control"  %><br>
                <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
                <div class="form-group text-center">
                  <%= f.label :remember_me, class: "checkbox inline" do %>
                    <%= f.check_box :remember_me %>
                    <span>remember</span>
                    <% end %>&emsp;&emsp;
                </div>
                <br>
                <%= f.submit "Login", class: "btn btn-success" %>
              <% end %>
              <%= form_for @user, html: {id: 'register-form', role:"form", style: 'display: none;'} do |f| %>
                <div class="form-group">
                  <label for="example-text-input" class="col-2 col-form-label">Name: </label>
                  <%= f.text_field :name, class: "form-control"%>
                </div>
                <div class="form-group">
                  <label for="example-text-input" class="col-2 col-form-label">Email: </label>
                  <%= f.email_field :email, class: "form-control"%>
                </div>
                <div class="form-group">
                  <label for="example-text-input" class="col-2 col-form-label">Password: </label>
                  <%= f.password_field :password, class: "form-control" %>
                </div>
                <div class="form-group">
                  <label for="example-text-input" class="col-2 col-form-label">Password confirmation: </label>
                  <%= f.password_field :password_confirmation, class: "form-control" %>
                </div>
                <%= f.submit "Done", class: "btn btn-success" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_include_tag "login" %>