<!DOCTYPE html>
<html>
<head>
  <title>Library</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <link href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet">
  <link href="https://cdn.datatables.net/buttons/1.5.1/css/buttons.dataTables.min.css" rel="stylesheet">
</head>

<body>
  <%= render "layouts/admin_header" %>
  <div class="container" >
    <div class="wrapper">
      <nav id="sidebar">
        <div class="sidebar-header">
          <h3>Dashboard</h3>
        </div>

        <div class="list-groupp">
          <p class="mb-0"><strong></strong></p>
          <p class="list-group-item" style="background: #F5F5F5">User: </p>
          <%= link_to "New", new_admin_user_url, class: "list-group-item" %>
          <%= link_to "All", admin_users_url, class: "list-group-item" %>
          <p class="list-group-item" style="background: #F5F5F5">Category: </p>
          <%= link_to "New", new_admin_category_url, class: "list-group-item" %>
          <%= link_to "All", admin_categories_url, class: "list-group-item" %>
          <p class="list-group-item" style="background: #F5F5F5">Book: </p>
          <%= link_to "New", new_admin_book_url, class: "list-group-item" %>
          <%= link_to "All", admin_books_url, class: "list-group-item" %>
        </div>
      </nav>
      <div id="content">
        <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>"><%= message %></div>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
  <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/1.5.1/js/dataTables.buttons.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.flash.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js"></script>
  <script src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.html5.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/1.5.1/js/buttons.print.min.js"></script>
</body>
</html>
