<div class="container">
  <h1>Edit category: </h1>
  <%= form_for @category do |f| %>
      <div class="form-group">
        <label for="example-text-input" class="col-2 col-form-label">Name: </label>
        <%= f.text_field :name, class: "form-control"%>
      </div>
      <%= f.submit "Done", class: "btn btn-success" %>
  <% end %>
</div>