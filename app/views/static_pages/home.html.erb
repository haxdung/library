<div id="intro" class="section-intro">
  <div class="search-container">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1>Find the book that fits your life</h1><br><h2>More than <strong>12,000</strong> book are waiting !</h2>
          <div class="content">
            <div class="input-group stylish-input-group">
            <input type="text" class="form-control"  placeholder="Search" id="search_text">
            <span class="input-group-addon">
              <button type="submit" class="btn btn-default" id="submit-search">
                <span class="glyphicon glyphicon-search"></span>
              </button>
            </span>
            </div>
          </div>
          <div class="popular-jobs">
            <b>Popular Categories: </b>
            <% @categories.each do |t| %>
              <%= link_to t.name, root_url(category: t.id), class: "hot-topic", remote: true %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<section class="find-job section" id="request-section">
  <div class="container">
    <h2 class="section-title">Hot books: </h2>
    <div class="row">
      <div class="col-md-12" id="books" >
        <%= render partial: "books/book_detail", collection: @books, as: :book %>
      </div>
      <div class="col-md-12">
        <div id="paginate"><%= paginate @books, remote: true, theme: 'twitter-bootstrap-3' %></div>
      </div>
    </div>
  </div>
</section>

<script>
  $("#submit-search").on("click", function(){
      if($("#search_text").val() !== "")
      $.ajax({
        url: "/",
        method: "get",
        data: {search_text: $("#search_text").val()}
      })
  })
</script>